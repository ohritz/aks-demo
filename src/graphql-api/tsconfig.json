{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "importHelpers": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist/",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": ["es2020"],
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/common/config/types"]
  },
  "display": "Node 18",
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
